<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pdx.kstn.kstn_boggle">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/background_iokanan"
        android:label="Boggle Game"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseModeMainActivity"
            android:noHistory="true" />
        <activity
            android:name=".RulesActivity"
            android:noHistory="true" />
        <activity
            android:name=".PlayerActivity"
            android:noHistory="true" />
        <activity
            android:name=".ScoresActivity"
            android:noHistory="true" />
        <activity
            android:name=".GameOver"
            android:noHistory="true" />
        <activity
            android:name=".MultiPlayerActivity"
            ></activity>

        <activity
            android:name=".DeviceListActivity"
            android:noHistory="true" /><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>