<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/background_iokanan"
    android:weightSum="1"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="20dp"
        android:text="Choose Mode"
        android:textColor="#FBE3D1"
        android:fontFeatureSettings="@string/app_name"
        android:includeFontPadding="true"
        android:fontFamily="cursive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:textColorLink="@android:color/black"
        android:fadingEdge="horizontal"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="65dp"
        android:layout_weight="0.13" />

    <Button
        android:textStyle="bold"
        android:fontFamily="casual"
        android:text="1 player"
        android:textAllCaps="false"
        android:textColor="#9B4302"
        android:background="@drawable/background6"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/button_single_player_mode"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="75dp"
        android:paddingTop="0dp"
        android:textSize="35dp" />

    <Button
        android:textStyle="bold"
        android:fontFamily="casual"
        android:text="2 players"
        android:background="@drawable/background6"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textAllCaps="false"
        android:textColor="#9B4302"
        android:id="@+id/button_double_player_mode"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:textSize="35dp" />



</LinearLayout>