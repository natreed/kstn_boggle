<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gameboard_background"
    android:weightSum="1"
    android:paddingTop="5dp">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:id="@+id/message_prompt" >

        <TextView
            android:text="Count Down Timer:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button0"
                android:layout_column="0"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button1"
                android:layout_column="1"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button2"
                android:layout_column="2"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button3"
                android:layout_column="3"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_column="0"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button5"
                android:layout_column="1"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button6"
                android:layout_column="2"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button7"
                android:layout_column="3"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button8"
                android:layout_column="0"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button9"
                android:layout_column="1"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button10"
                android:layout_column="2"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />
            <Button
                android:id="@+id/button11"
                android:layout_column="3"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button12"
                android:layout_column="0"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button13"
                android:layout_column="1"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button14"
                android:layout_column="2"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

            <Button
                android:id="@+id/button15"
                android:layout_column="3"
                android:text=""
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/background_neural"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/round"
                android:text="ROUND:"
                android:paddingRight="10dp"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp" />

            <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roundCount"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:text="WORDS FOUND"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/words_found" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </TableRow>
            </TableLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="Shake"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:id="@+id/shake"
                android:layout_height="50dp" />

            <Button
                android:text="New Game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_new_game" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</LinearLayout>